
@{
    ViewData["Title"] = "Awards";
    Layout = "~/Areas/Individuals/Views/Shared/_IndividualPortalLayout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Curriculum Vitae</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Dashboard", "Inidviduals")">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Edit</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Interests</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-4">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Add Interest</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </div>
                </div>

                <div class="ibox-content">

                    <div class="row">

                        <div class="col-sm-12">
                            <div class="form-group">
                                Select Interest
                                <select class="InterestOptions form-control" style="width:100%;">
                                    <option>test</option>
                                    <option>test1</option>
                                    <option>test2</option>
                                </select><br />
                                <br />
                                <button class="btn btn-sm btn-info full-width" type="button">
                                    <i class="fa fa-plus"></i>&nbsp;Add interest if not listed.
                                </button>

                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-sm-12">
                            <input type="text" class="js-range-slider" name="my_range" value="" />

                            <small>Indicate Interest Level.</small>
                            <hr />

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <button class="btn btn-primary full-width" type="button">Add</button>
                        </div>

                    </div>

                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Horizontal form</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-responsive  table-hover">
                            <thead>
                                <tr>
                                    <th>Options</th>
                                    <th>Interest</th>
                                    <th>Interest Level</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<environment names="Development,Staging,Production">
    @*<link rel="stylesheet" href="~/lib/chosen/bootstrap-chosen.css" />*@
    <link rel="stylesheet" href="~/lib/ionRangeSlider/ion.rangeSlider.css" />
    <link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />
</environment>

@section Scripts {
    <environment names="Development,Staging,Production">
        @*<script src="~/lib/chosen/chosen.jquery.js"></script>*@
        <script src="~/lib/select2/dist/js/select2.min.js"></script>
        <script src="~/lib/ionRangeSlider/ion.rangeSlider.min.js"></script>
        @*<script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.js"></script>
            <script src="~/lib/toastr/toastr.min.js"></script>
            <script src="~/lib/ionRangeSlider/ion.rangeSlider.min.js"></script>
            <script src="~/lib/sweetalert/dist/sweetalert.min.js"></script>*@

    </environment>
    <script type="text/javascript">

        $(document).ready(function () {


            $(".js-range-slider").ionRangeSlider({
                skin: "big",

                min: 0,
                max: 100,
                from: 50,
                grid: true,
                prettify: my_prettify,
                onStart: function (data) {
                    // fired then range slider is ready
                },
                onChange: function (data) {
                    // fired on every range slider update
                    //$("#QualificationAverage").val(data.from);
                },
                onFinish: function (data) {
                    // fired on pointer release
                },
                onUpdate: function (data) {
                    // fired on changing slider with Update method
                }
            });

        });
        function my_prettify(n) {

            return n + " %";
        }
        $(".InterestOptions").select2();

